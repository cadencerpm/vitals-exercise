{
    "name": "Vitals Exercise (Go)",
    "image": "mcr.microsoft.com/devcontainers/go:1.24",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}/go",
    "features": {
        "ghcr.io/devcontainers-contrib/features/protoc:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/devcontainers/features/node:1": {}
    },
    "onCreateCommand": "go mod download && go install google.golang.org/protobuf/cmd/protoc-gen-go@latest && go install google.golang.org/grpc/cmd/protoc-gen-go-grpc@latest && npm install -g @openai/codex && curl -fsSL https://claude.ai/install.sh | bash",
    "postCreateCommand": "echo '{\"hasCompletedOnboarding\": true}' > ~/.claude.json",
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.go",
                "drblury.protobuf-vsc",
                "esbenp.prettier-vscode",
                "eamodio.gitlens",
                "ms-vscode.makefile-tools"
            ],
            "settings": {
                "go.useLanguageServer": true,
                "go.lintTool": "golangci-lint",
                "go.lintFlags": ["--fast"]
            }
        }
    },
    "remoteUser": "vscode"
}
